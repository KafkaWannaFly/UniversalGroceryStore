{
	"extends": "./tsconfig.json",
	"include": [
		"./routes/*",
		"./controllers/*",
		"./resources/js/Models/*",
		"./tests/*"
	],
	"exclude": [
		"./resources/js/*.ts",
		"./resources/js/Models/*.ts",
		"./resources/js/Models/*.js"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	}
}
