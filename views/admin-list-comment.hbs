<!-- Main Content Secsion-->
<div class="body-area">
    <div class="body-content">
        <h3 class="page-title">QUẢN LÝ DANH SÁCH COMMENT FEEDBACK</h3>

        <div class="search-bar">
            <input class="form-control" type="text" placeholder="Search..." aria-label="Search">
        </div>

        <div class="table-list-product--wrapper">
            <table class="table table-hover list-product-table">
                <thead class="thead-dark">
                    <tr class="d-flex">
                        <th class="col-lg-2">ID sản phẩm</th>
                        <th class="col-lg-2">Tên khách hàng</th>
                        <th class="col-lg-2">Ngày</th>
                        <th class="col-lg-4">Nội dung</th>
                        <th class="col-lg-2">Thao tác</th>
                    </tr>

                <tbody>

                    {{#each Data.Comments}}
                    <tr class="d-flex">
                        <td class="col-lg-2 product-name">{{commentedItem}}</td>
                        <td class="col-lg-2 name-user">{{personName}}</td>
                        <td class="col-lg-2 comment-date">{{date}}</td>
                        <td class="col-lg-4 comment-content">{{content}}</td>
                        <td class="col-lg-2 comment-act">
                            <button type="button" class="btn btn-primary btn-detail" data-toggle='modal'
                                data-target='#form-model'>Xem</button>
                            <button type="button" class="btn btn-danger btn-delete">Delete</button>
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
                </thead>
            </table>
        </div>
    </div>
</div>

<script>
    let arrDate = document.getElementsByClassName("comment-date");
    for (let i = 0; i < arrDate.length; i++) {
        let date = new Date(arrDate[i].innerHTML);
        arrDate[i].innerHTML = date.getDate() + "/" + (date.getMonth() + 1) + "/" + date.getFullYear();
    }

    let arrStatus = document.getElementsByClassName("status");
    for (let i = 0; i < arrStatus.length; i++) {
        let status = arrStatus[i].innerHTML;
        if (status == 0) arrStatus[i].innerHTML = "Đang xử lý";
        else if (status == 1) arrStatus[i].innerHTML = "Đang giao hàng";
        else if (status == 2) arrStatus[i].innerHTML = "Hoàn tất";
    }
</script>