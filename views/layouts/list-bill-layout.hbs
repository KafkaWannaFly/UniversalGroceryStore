    <!-- Modal -->
    <div class="modal fade" id="form-model" tabindex="-1" role="dialog" aria-labelledby="form-model" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Thông tin Đơn hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="id">ID đơn hàng</label>
                        <input type="text" name="id" id="id" class="form-control" placeholder="ID đơn hàng">
                    </div>

                    <div class="form-group">
                        <label for="customer-name">Tên khách hàng</label>
                        <input type="text" name="customer-name" id="customer-name" class="form-control"
                            placeholder="Tên khách hàng">
                    </div>

                    <div class="form-group">
                        <label for="customer-name">Ngày đặt</label>
                        <input type="date" name="date" id="date" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="address">Địa chỉ giao hàng</label>
                        <input type="text" name="address" id="address" class="form-control" placeholder="Address">
                    </div>

                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input type="phone" name="phone" id="phone" class="form-control" placeholder="Số điện thoại">
                    </div>

                    <div class="form-group">
                        <label for="payment-method">Phương thức thanh toán</label>
                        <select class="form-control" id="payment-method">
                            <option value="cod">COD</option>
                            <option value="momo">MOMO</option>
                            <option value="zalopay">ZaloPay</option>
                            <option value="vnpayqr">VNPAY</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="notes">Ghi chú</label>
                        <textarea class="form-control" rows="5" id="notes"></textarea>
                    </div>

                    <!-- Số lượng sản phẩm và tên sản phẩm -->

                    <div class="row m-0 p-0 justify-content-between">
                        <p class="col-md-8 p-0">Tên sản phẩm</p>
                        <p class="col-md-3 p-0">Số lượng</p>

                        <input type="text" name="item-name" id="item-name" class="form-control col-md-8"
                            placeholder="Item 01">
                        <input type="number" name="item-amount" id="item-amount" class="form-control col-md-3"
                            placeholder="1">

                        <input type="text" name="item-name" id="item-name" class="form-control col-md-8"
                            placeholder="Item 02">
                        <input type="number" name="item-amount" id="item-amount" class="form-control col-md-3"
                            placeholder="2">

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="saveBtn">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeBtn">Close</button>
                </div>
            </div>
        </div>
    </div>

