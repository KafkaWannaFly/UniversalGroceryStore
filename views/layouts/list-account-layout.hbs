    {{{body}}}


    <!-- Modal -->
    <div class="modal fade" id="form-model" tabindex="-1" role="dialog" aria-labelledby="form-model" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin Tài khoản</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-md-4" for="type">Loại tài khoản</label>
                        <div class="col-md-12">
                            <select class="form-control" id="type">
                                <option value="user">User</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="username">Tên đăng nhập</label>
                        <div class="col-md-12">
                            <input type="text" name="username" id="username" class="form-control"
                                placeholder="Username">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="password">Mật khẩu</label>
                        <div class="col-md-12">
                            <input type="text" name="password" id="password" class="form-control" placeholder="Password"
                                autocomplete="off">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="name">Tên</label>
                        <div class="col-md-12">
                            <input type="text" name="name" id="name" class="form-control" placeholder="Tên">
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-md-4" for="email">Địa chỉ Email</label>
                        <div class="col-md-12">
                            <input type="text" name="email" id="email" class="form-control" placeholder="Email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="dob">Ngày sinh</label>
                        <div class="col-md-12">
                            <input type="date" name="dob" id="dob" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="gender">Giới tính</label>
                        <div class="col-md-12">
                            <select class="form-control" id="gender">
                                <option value="male">Nam</option>
                                <option value="female">Nữ</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="address">Địa chỉ</label>
                        <div class="col-md-12">
                            <input type="text" name="address" id="address" class="form-control" placeholder="Địa chỉ">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="phone">Số điện thoại</label>
                        <div class="col-md-12">
                            <input type="phone" name="phone" id="phone" class="form-control"
                                placeholder="Số điện thoại">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="height">Chiều cao</label>
                        <div class="col-md-12">
                            <input type="number" min="0" step="1" max="200" name="height" id="height"
                                class="form-control" placeholder="Chiều cao">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4" for="weight">Cân nặng</label>
                        <div class="col-md-12">
                            <input type="number" min="0" step="1" max="200" name="weight" id="weight"
                                class="form-control" placeholder="Cân nặng">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="saveBtn">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeBtn">Close</button>
                </div>
            </div>
        </div>
    </div>


