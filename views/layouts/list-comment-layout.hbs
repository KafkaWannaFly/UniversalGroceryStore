    {{{body}}}

    <!-- Modal -->
    <div class="modal fade" id="form-model" tabindex="-1" role="dialog" aria-labelledby="form-model" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Thông tin Comment Feedback</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-md-12" for="name-user">Tên người comment</label>
                        <div class="col-md-12">
                            <input type="text" name="name-user" id="name-user" class="form-control"
                                placeholder="Tên người dùng">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12" for="email-user">Email người comment</label>
                        <div class="col-md-12">
                            <input type="email" name="email-user" id="email-user" class="form-control"
                                placeholder="Email người dùng">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12" for="product-id">ID sản phẩm</label>
                        <div class="col-md-12">
                            <input type="text" name="product-id" id="product-id" class="form-control"
                                placeholder="ID sản phẩm">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12" for="product-name">Tên sản phẩm</label>
                        <div class="col-md-12">
                            <input type="text" name="product-name" id="product-name" class="form-control"
                                placeholder="Tên sản phẩm">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12" for="content">Nội dung</label>
                        <div class="col-md-12">
                            <input type="text" name="content" id="content" class="form-control" placeholder="Nội dung">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12" for="date">Ngày comment</label>
                        <div class="col-md-12">
                            <input type="date" name="date" id="date" class="form-control" placeholder="Ngày comment">
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeBtn">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
