{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "esnext",
		// "removeComments": true,
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"listEmittedFiles": true
		// "allowJs": true
		// "lib": ["dom"]
	},
	"include": ["./**/*"],
	"exclude": [
		"./plugins/**/*",
		"./typings/**/*",
		"./built/**/*",
		"./*.js",
		"node_modules"
	]
}
