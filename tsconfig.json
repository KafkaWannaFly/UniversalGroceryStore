{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "esnext",
		"removeComments": true,
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": ["./**/*"],
	"exclude": [
		"./plugins/**/*",
		"./typings/**/*",
		"./built/**/*",
		"./*.js",
		"node_modules"
	]
}
