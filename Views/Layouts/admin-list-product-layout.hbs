    {{{body}}}

    <!-- Modal -->
    <div class="modal fade" id="form-model" tabindex="-1" role="dialog" aria-labelledby="form-model" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Thông tin Sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="id">ID sản phẩm</label>
                        <input type="text" name="id" id="id" class="form-control" placeholder="ID sản phẩm">
                    </div>

                    <div class="form-group">
                        <label for="name">Tên sản phẩm</label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="Tên sản phẩm">
                    </div>

                    <div class="form-group">
                        <label for="category">Loại sản phẩm</label>
                        <input type="text" name="category" id="category" class="form-control"
                            placeholder="Loại sản phẩm">
                    </div>

                    <div class="form-group">
                        <label for="old-price">Giá cũ</label>
                        <input type="number" name="old-price" id="old-price" class="form-control" placeholder="Giá cũ">
                    </div>

                    <div class="form-group">
                        <label for="price">Giá hiện tại</label>
                        <input type="number" name="price" id="price" class="form-control" placeholder="Giá hiện tại">
                    </div>

                    <div class="form-group">
                        <label for="option">Option</label>
                        <input type="text" name="option" id="option" class="form-control" placeholder="Option">
                    </div>

                    <div class="form-group">
                        <label for="category">Mô tả sản phẩm</label>
                        <textarea class="form-control" rows="5" id="category"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="stock">Số lượng hàng trong kho</label>
                        <input type="number" min="0" step="1" name="stock" id="stock" class="form-control"
                            placeholder="Số lượng hàng trong kho">
                    </div>

                    <div class="form-group">
                        <label for="sales">Số lượng hàng đã bán</label>
                        <input type="number" min="0" step="1" name="sales" id="sales" class="form-control"
                            placeholder="Số lượng hàng đã bán">
                    </div>

                    <div class="form-group">
                        <label for="posted-time">Ngày đăng</label>
                        <input type="date" name="posted-time" id="posted-time" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="last-update-time">Cập nhật lần cuối</label>
                        <input type="date" name="last-update-time" id="last-update-time" class="form-control">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="saveBtn">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeBtn">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
